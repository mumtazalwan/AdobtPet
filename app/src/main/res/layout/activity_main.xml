<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/matchagreen"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="190.5dp"
        android:layout_height="203.62dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/loginlogo2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_marginBottom="50dp"
        android:text="Login"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="normal|bold" />


    <EditText
        android:id="@+id/loginusn"
        android:layout_width="250dp"
        android:layout_height="53dp"
        android:layout_below="@id/textView"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/border"
        android:drawableLeft="@drawable/ic_baseline_perm_identity_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Username"
        android:maxLength="20"
        android:padding="10dp"
        android:textColorHint="@color/black"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/logipass"
        android:layout_width="250dp"
        android:layout_height="53dp"
        android:layout_below="@id/loginusn"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="46dp"
        android:background="@drawable/border"
        android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Password"
        android:maxLength="20"
        android:padding="10dp"
        android:textColorHint="@color/black"
        android:textSize="20sp" />


    <Button
        android:layout_width="230dp"
        android:layout_height="53dp"
        android:layout_below="@id/logipass"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border"
        android:text="Log In"
        android:textColorHint="@color/white" />


</RelativeLayout>